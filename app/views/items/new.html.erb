

<div class="row">

  <%= form_for @item, :html => {:class => 'form-horizontal'} do |order_form| %>
      <div class="form-group">
        <label for="name_cn" class="col-sm-2 control-label">中文菜名</label>

        <div class="col-sm-10">
          <%= order_form.text_field :name_cn, :class => "form-control", :placeholder => "中文菜名" %>
        </div>
      </div>
      <div class="form-group">
        <label for="name_cn" class="col-sm-2 control-label">英文菜名</label>

        <div class="col-sm-10">
          <%= order_form.text_field :name_en, :class => "form-control", :placeholder => "英文菜名" %>
        </div>
      </div>
      <div class="form-group">
        <label for="name_cn" class="col-sm-2 control-label">菜单种类</label>

        <div class="col-sm-10">
          <%= order_form.select :item_type, {"午餐" => "1", "晚餐" => "2"}, {:prompt => false}, {:class => 'form-control', :required => true} %>
        </div>
      </div>
      <div class="form-group">
        <label for="name_cn" class="col-sm-2 control-label">套餐A价格</label>

        <div class="col-sm-10">
          <%= order_form.text_field :price_a, :class => "form-control", :placeholder => "套餐A价格" %>
        </div>
      </div>
      <div class="form-group">
        <label for="name_cn" class="col-sm-2 control-label">套餐B价格</label>

        <div class="col-sm-10">
          <%= order_form.text_field :price_b, :class => "form-control", :placeholder => "套餐B价格" %>
        </div>
      </div>
      <div class="form-group">
        <label for="name_cn" class="col-sm-2 control-label">上传图片</label>

        <div class="col-sm-10">
          <%= order_form.file_field :img,  {:class => 'form-control', :required => true} %>
        </div>
      </div>

      <div class="form-group">
        <label for="name_cn" class="col-sm-2 control-label"></label>

        <div class="col-sm-10">
          <%= order_form.submit "保存", :class => "btn btn-primary" %>
        </div>
      </div>
  <% end %>
</div>


