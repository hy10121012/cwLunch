<div class="row">
  <%=form_for @location,:html => {:class => 'form-horizontal'} do |location_form| %>
      <div class="form-group">
        <label for="name_cn" class="col-sm-2 control-label">地址名称</label>

        <div class="col-sm-10">
          <%= location_form.text_field :name, :class => "form-control", :placeholder => "地址名称" %>
        </div>
      </div>
      <div class="form-group">
        <label for="name_cn" class="col-sm-2 control-label"></label>

        <div class="col-sm-10">
          <%= location_form.submit "保存", :class => "btn btn-primary" %>
        </div>
      </div>
  <% end %>
</div>
